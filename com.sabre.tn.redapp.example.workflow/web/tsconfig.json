{
  "compilerOptions": {
    "target": "es5",
    "module": "amd",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "outFile": "./build/tsc/module.js",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/code/**/*.ts",
    "./core/typings/**/*.d.ts",
    "./src/typings/**/*.d.ts",
    "./node_modules/**/*.d.ts"
  ]
}